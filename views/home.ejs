<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content text-center">
      <h1>Find Your Perfect Gym & Fitness Plan</h1>
      <p>
        Join GymFuse for personalized workout & diet plans and get gyms
        effortlessly.
      </p>
      <a href="/workouts" class="btn btn-outline-primary">Explore Workouts</a>
      <a href="/gyms" class="btn btn-outline-primary ms-3">Explore Gyms</a>
      <a href="/diets" class="btn btn-outline-primary ms-3">Explore Diets</a>
    </div>
  </div>
</section>

<!-- Workout Plans Section -->
<section id="workouts" class="my-4">
  <div class="container text-center">
    <h2 class="fw-bold mb-4 text-primary">Our Workout Plans</h2>
    <div class="row row-cols-2 row-cols-md-4 g-4">
      <% workouts.forEach(workout => { %>
      <div class="col workout-card">
        <div class="border bg-transparent card h-100 shadow-lg">
          <img
            src="images/workouts/<%= workout.image %>"
            class="card-img-top rounded"
            alt="<%= workout.name %>"
            loading="lazy"
            style="height: 200px; object-fit: cover"
          />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary"><%= workout.name %></h5>
            <p class="card-text">
              <%= workout.short_description.substring(0, 100) %>...
            </p>
            <a
              href="/workouts/<%= workout.id %>"
              class="btn btn-primary mt-auto w-100"
              >Learn More</a
            >
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <a href="/workouts" class="btn btn-outline-primary mt-4">Show More</a>
  </div>
</section>

<!-- Diet Plans Section -->
<section id="diet" class="mb-4">
  <div class="container text-center">
    <h2 class="fw-bold mb-4 text-primary">Personalized Diet Plans</h2>
    <div class="row row-cols-2 row-cols-md-4 g-4">
      <% diets.forEach(diet => { %>
      <div class="col diet-card">
        <div class="border bg-transparent card h-100 shadow-lg">
          <img
            src="images/diets/<%= diet.image %>"
            class="card-img-top rounded"
            alt="<%= diet.name %>"
            loading="lazy"
            style="height: 200px; object-fit: cover"
          />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary"><%= diet.name %></h5>
            <p class="card-text">
              <%= diet.description.substring(0, 100) %>...
            </p>
            <a
              href="/diets/<%= diet.id %>"
              class="btn btn-primary mt-auto w-100"
              >Learn More</a
            >
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <a href="/diets" class="btn btn-outline-primary mt-4">Show More</a>
  </div>
</section>

<!-- Gyms Section -->
<section id="gyms" class="mb-4">
  <div class="container text-center">
    <h2 class="fw-bold mb-4 text-primary">Gyms</h2>
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% gyms.forEach(gym => { %>
      <div class="col gym-card">
        <div
          class="card bg-transparent h-100 border shadow-sm transition-hover"
        >
          <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title text-primary fw-bold mb-3">
              <%= gym.name %>
            </h5>
            <p class="card-text text-muted flex-grow-1">
              <%= gym.description.substring(0, 100) %>...
            </p>
            <a href="/gyms/<%= gym.id %>" class="btn btn-primary mt-auto w-100">
              Learn More
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <a href="/gyms" class="btn btn-outline-primary mt-4">Show More</a>
  </div>
</section>
