<!-- Gyms Page -->
<section id="gyms-page" class="py-5">
  <div class="container text-center">
    <h2 class="fw-bold mb-4 text-primary">All Gym Center</h2>

    <!-- All Gym Cards -->
    <% if (gyms.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="gyms-list">
      <% gyms.forEach(gym => { %>
      <div class="col gym-card">
        <div
          class="card bg-transparent h-100 border shadow-sm transition-hover"
        >
          <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title text-primary fw-bold mb-3">
              <%= gym.name %>
            </h5>
            <p class="card-text text-muted flex-grow-1">
              <%= gym.description.substring(0, 100) %>...
            </p>
            <a href="/gyms/<%= gym.id %>" class="btn btn-primary mt-auto w-100">
              Learn More
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <!-- No Gyms Found Message -->
    <div class="py-5">
      <p class="text-muted fs-3 fw-medium">No gyms found in your area.</p>
      <p class="text-secondary">Check back later for updates!</p>
    </div>
    <% } %>
  </div>
</section>
