              <a href="mailto:info@alltechfitness.com"
                >info@alltechfitness.com</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- "Request a Tour" Button -->
    <div class="mt-4 text-center">
      <a href="/contact-us" class="btn btn-primary btn-lg">Request a Tour</a>
    </div>
  </div>
</section>
