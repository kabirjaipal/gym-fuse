    <div class="row g-4">
      <!-- Contact Form -->
      <div class="col-lg-7">
        <div class="card shadow-sm p-4 border-0">
          <h4 class="fw-bold text-secondary mb-3">Send Us a Message</h4>
          <form>
            <!-- Name -->
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Full Name"
                required
              />
              <label for="name"
                ><i class="bi bi-person-fill me-2 text-primary"></i> Full
                Name</label
              >
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Email Address"
                required
              />
              <label for="email"
                ><i class="bi bi-envelope-fill me-2 text-primary"></i> Email
                Address</label
              >
            </div>

            <!-- Subject -->
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="subject"
                placeholder="Subject"
                required
              />
              <label for="subject"
                ><i class="bi bi-chat-left-dots-fill me-2 text-primary"></i>
                Subject</label
              >
            </div>

            <!-- Message -->
            <div class="form-floating mb-3">
              <textarea
                class="form-control"
                id="message"
                placeholder="Your Message"
                style="height: 120px"
                required
              ></textarea>
              <label for="message"
                ><i class="bi bi-chat-dots-fill me-2 text-primary"></i> Your
                Message</label
              >
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary fw-bold">
                <i class="bi bi-send-fill me-2"></i> Send Message
              </button>
            </div>
          </form>
        </div>
